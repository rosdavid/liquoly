{%if forloop.first %}
  <div class="{%if layout >= 4 %} list {% endif %} post-item {% if layout == 4%} full {% endif %}col-sm-12 col-md-{{cl_first}} {% if layout != 1 and layout != 4 and index == 1 %} even {% endif %}">    
   <div class="item">
    <div class="image-blog">
    <a href="{{ article.url }}" title="{{ article.title }}">
      <div class="pr_lazy_img lazyload item__position" data-bgset="{{ article.image.src | img_url: '1x1' }}" data-ratio="{{article.image.aspect_ratio}}" data-sizes="auto" style="padding-top:{{ 1 | divided_by: article.image.aspect_ratio | times: 100}}%;" ></div>
    </a>
      <div class="blog"><span><a href="{{blog.url}}">{{blog.title}}</a></span></div>
    </div> 
     <div class="post-info">  
      
       <div class="head head-article">
         <div class="title_blog">
           <h3>
             <a href="{{ article.url}}" class="post-title">{{ article.title }}</a>
           </h3>  
         </div>
       </div>
        <ul class="meta-post">
         <li class="author">{{'blogs.article.by_author' | t: author : ""}} <span><a href="#">{{article.author}}</a></span></li>
       </ul>
       <div class="main-info-post">
         <div>
           {% if article.excerpt.size > 0 %}
           {{ article.excerpt | strip_html | truncatewords: 22}}         
           {% else %}
           <div class="des"><p>{{ article.content | strip_html | truncatewords: 22}}</p></div>
           {% endif %}   
         </div>      
       </div>
       <div class="blog-bottom">
         <div class="read-more"><a href="{{ article.url}}" class="read-more">{{'blogs.article.read_more' | t: read_more : ""}}</a></div>
         <div class="inner-date">
           <span class="month">{{ article.created_at | date: "%B" }}</span>,
           <span class="day">{{ article.created_at | date: "%d" }}</span>
           <span class="year">{{ article.created_at | date: "%Y" }}</span>
         </div>
       </div>
     </div>
     </div>
  </div>
{% else%}
