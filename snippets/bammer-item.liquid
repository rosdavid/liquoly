{%- liquid
  assign collection = collections[block.settings.collection]
  assign image = block.settings.image
  assign home_t = 'homepage.onboarding.collection_title' | t  | append:' #' | append:for_i 
  assign ratio = image.aspect_ratio 
  
  assign hidden_content = block.settings.hidden_content
  assign url = block.settings.link_img 
-%}
<div class="laber_banner {{ccol}}" style="margin-bottom:{{ block.settings.mg_bottom }}px;">
  <div class="cms-box">                
    <div class="cms-img">
      {%- if block.settings.image -%} 
      	<a href="{% if url != blank %}{{url}}{%else%}#{%endif%}"  {{ block.shopify_attributes }}>
      	<div data-image-effect class="pr_lazy_img main-img lazyload laber_bg_lz " data-id="{{image.id}}" data-bgset="{{ image | img_url: '1x1' }}" data-parent-fit="width" data-wiis data-ratio="{{ratio}}" data-sizes="auto" style="padding-top:{{ 1 | divided_by: ratio | times: 100}}%;"></div>
       </a>
      {% else %}
      	<div class="pr_lazy_img main-img lazyload laber_bg_lz {{block.settings.img_align}}" data-bgset="{{cimg}}" data-parent-fit="width"  data-sizes="auto" style="padding-top:{{ ratio_demo }}%;"></div>
      {%- endif -%}
    </div>
    <div class="cms-content h_{{block.settings.h_position}} v_{{block.settings.v_position}} text_{{block.settings.txt_align}} " {%if hidden_content %}style="display:none;"{%endif%}>
      <div class="content_banner">
      {%if block.settings.sub_title != blank%}   
      	<h5 class="sub-title">{{block.settings.sub_title}}</h5>
      {%endif%}
      {%if block.settings.title != blank%}   
      	<h3 class="title">{{block.settings.title}}</h3>
      {%endif%}
        {%if block.settings.content != blank%}   
      	<p class="text">{{block.settings.content}}</p>
      {%endif%}
      {%- if  block.settings.b_title != blank -%}
        <a id="b_{{block.id}}"  class="buttons" href="{{block.settings.btn_link}}" target="{{block.settings.open_link}}"
           {{ block.shopify_attributes }}>{{block.settings.b_title}}</a>
      {%- endif -%}
      </div>
    </div>
  </div>
</div>