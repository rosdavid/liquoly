<header>
  <div class="header layout1 no-prepend-box-sticky">    
    {% include 'currency-picker' %}
    <div class="header-main-wrap">
      <div class="header-top">
        <div class="container {% if section.settings.layout == 'full-width' %}{{section.settings.layout}} {% endif %}">
          <div class="row">
            <div class="header-nav-mobile col-md-4 col-3">
              <a class="menu-bar mobile-navigation" href="#">
                <span class="icon">
                  <span></span>
                  <span></span>
                  <span></span>
                </span>
              </a>
            </div>
            <div class="header-logo col-lg-auto col-md-4 col-6">
              {% if settings.logo != blank %}
                  <a href="/" class="site-header__logo-image">
                    {% capture image_size %}{{ settings.logo_max_width | escape }}x{% endcapture %}
                    <img                                          
                       src="{{ settings.logo | img_url: image_size, scale: 2 }}"                      
                       alt="{{ logo_alt | escape }}"
                       style="max-width: {{ settings.logo_max_width }}px; width:auto; height:auto;">
                  <noscript>
                    {% capture image_size %}{{ settings.logo_max_width | escape }}x{% endcapture %}
                    <img src="{{ settings.logo | img_url: image_size }}"
                         srcset="{{ settings.logo | img_url: image_size }} 1x, {{ settings.logo | img_url: image_size, scale: 2 }} 2x"
                         alt="{{ settings.logo.alt | default: shop.name }}"
                         style="max-width: {{ settings.logo_max_width }}px; width:auto; height:auto;">
                  </noscript>
                  </a>
                {% else %}
                  <a class="site-title" href="/" itemprop="url">{{ shop.name }}</a>
                {% endif %}
            </div>   
            
            {%- render 'menu',se_blocks:se_blocks,tp_blocks:tp_blocks -%}
            <div class="header-top-meta col-lg-auto col-md-4 col-3">
              <ul class="header-control">  
                {% if section.settings.header_use_search_home %}
                <li class="">
                  <a href="/search" class="header-search push_side header-icon" data-id="#nt_search_canvass" data-js-tooltip data-tippy-content="{{'general.search.title' | t}}">
                    <i class="lnr lnr-magnifier"></i>   
                  </a>                        
                </li>   
                {% endif %}
                
                 {%if section.settings.header_use_account%}
                <li class="signin item-list">
                  <a href="javascript:void(0);" class="toggle-submenu header-icon" data-js-tooltip data-tippy-content="{{'customer.login.sign_in' | t}}">
                    <i class="lnr lnr-user"></i>
                    <span>{{'customer.login.sign_in' | t}}</span>
                    
                  </a>
                  <ul class="child-list">         
                    {% if customer %}
                    <li class="inner-list">
                      <a href="/account/logout">
                        {{'customer.logout.title' | t}}
                      </a>
                    </li>
                    {% else %}
                    <li class="inner-list">
                      <a href="/account/login" class="push_side" data-id="#nt_login_canvas">
                        {{'customer.login.title' | t}}
                      </a>
                    </li>
                    {% endif %} 
                    <li class="inner-list">
                      <a href="/account/register" >
                        {{'customer.register.submit' | t}}
                      </a>
                    </li>
                  </ul> 
                </li>
                 {% endif %}
                
                {% if section.settings.header_use_wishlist_home %}
                <li>
                  <a href="javascript:void(0);" class="push_side header-icon display-mobile" data-id="#nt_wishlist_canvas" data-js-tooltip data-tippy-content="{{'general.wishlist.title' | t}}">
                    <i class="lnr lnr-heart"></i>
                    <span class="header__counter" data-js-wishlist-count="0">0</span>
                  </a>                        
                </li>
                {% endif %}
                {% if section.settings.header_use_compare_home %}
                <li>
                  <a style="font-size: 21px;" href="javascript:void(0);" class="push_side header-icon" data-js-popup-button="compare-full" data-js-tooltip data-tippy-content="{{'general.compare.title' | t}}">
                    <i class="lnr lnr-layers" aria-hidden="true"></i>
                    <span class="header__counter" data-js-compare-count="0">0</span>
                  </a>
                </li>
                {% endif %}
                {% if section.settings.header_use_cart_home %}
                  <li class="box-minicart">
                    {% include'header-cart'%}
                  </li>
                {% endif %}
               
              </ul>
            </div>
          </div>
        </div>
      </div>      
    </div>
  </div>
</header>
<style scoped>
  .header .main-menu>li>a{
    color: {{section.settings.color_menu_text}};
  }
  .header .header-icon i{
    fill: {{section.settings.color_menu_text}};
  }
  .header .header-icon {               
    color: {{section.settings.color_menu_text}};           
  }
</style> 