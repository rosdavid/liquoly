
<div class="main-content shop-page contact-page" style="{% if section.settings.mg_bottom != 0 %}margin-bottom:{{section.settings.mg_bottom}}px; {%endif%}">
  {% if section.settings.left_title_block != blank %}
  	<h1 class=" main-title">{{section.settings.left_title_block}}</h1>
  {%endif%}
  <div class="content-form"style="background:{%- for block in section.blocks -%}{{block.settings.cl_bg}}{%- endfor -%};">
    <div class="container">
    <div class="row ">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="information-form">
          
          <div class="row">
            {%- if section.blocks.size > 0 -%}
              {%- for block in section.blocks -%}
                <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5"> 
                  <div class="contact-info">
                    <div class="contact-image">
                    <img src="{%- for block in section.blocks -%}{{block.settings.image | img_url:"800x283"}}{%else%}https://placehold.jp/14/f5f5f5/222/800x283.png?text=800x283+Image{%endfor%}">
                  </div>
                    <div class="contact-phone-mail">
                      <i class="icon-earphones"></i>
                      <span class="email">{{block.settings.email}}</span>
                      <span class="phone">{{block.settings.phone}}</span>
                    </div>
                    <div class="address">{{block.settings.address}}</div>
                    <div class="work_time"> {{block.settings.work_time}}</div>
                  </div>
                </div>
              {%- endfor -%}
            {%endif%}  
          
        <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7"> 
        <div class="contact-form">
          {% form 'contact', class:'form-contact', id:'contact-form' %}	
              {% if form.posted_successfully? %}
              <div class="successForm feedback">
                {{ 'contact.form.post_success' | t }}
              </div>
              {% endif %}
              {% if form.errors %}
              <div class="errorForm feedback">                
                <p>Your contact form has {{ form.errors | size | pluralize: "an error", "a few errors" }}. To submit your form, make the following changes and try again:</p>
                {% for field in form.errors %}
                <p>The {{ field | capitalize | replace: 'Body', 'Message' }} field {{ form.errors.messages[field] }}.</p>
                {% endfor %}
              </div>
              {% endif %}
              <h4 class="main-title">{{section.settings.right_title_block}}</h4>
              
              {% assign name_attr = 'contact.form.name' | t | handle %}
              <div class="row ">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                  <input placeholder="{{'contact.form.name' | t}} " class="input-info" id="name" required name="contact[{{ name_attr }}]"  type="text" value="{% if form[name_attr] %}{{ form[name_attr] }}{% elsif customer %}{{ customer.first_name }}{% endif %}"/>  
                </div>  
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                  <input placeholder="{{ 'contact.form.email' | t }}" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" required name="contact[email]" class="input-info" id="email" type="text"/>
                </div>
              </div>                       
              <textarea placeholder="{{'contact.form.message' | t}}" rows="8" class="input-info input-note" name="contact[body]" required id="message">{% if form.body %}{{ form.body }}{% endif %}</textarea>
              <div class="group-button">                
                <button class="button submit" type="submit">{{'contact.form.submit'|t}}</button>
              </div>
          {% endform %}
        </div>
           </div>
            </div>
          </div>
      </div>
    </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 padding-0">
        <!-- Map Element -->
          {% if section.settings.use_contact_map %}
              <div class="map">              
                {{ section.settings.map_iframe }}              
              </div>
          {% endif %}
        <!-- End Map Element -->
        
      </div>
  </div>
</div>
{% schema %}
