                  {%if fs_mb_text %}font-size:{{fs_mb_text}}px;{%endif%}
                  {%if ls_mb_text %}letter-spacing:{{ls_mb_text}}px;{%endif%}
				  {%if hide %}display:none;{%endif%}	
