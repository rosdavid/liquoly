				{%if color %}color:{{color}};{%endif%}
				{%if fw_text %}font-weight:{{fw_text}};{%endif%}
				{%if fs_text %}font-size:{{fs_text}}px;{%endif%}
				{%if lh_text %}line-height:{{lh_text}}px;{%endif%}
				{%if ls_text %}letter-spacing:{{ls_text}}px;{%endif%}
				margin: 0;
