{% if section.settings.header_use_bottom_menu %}
	<div class="wrap_bottom_menu">
      <div class="wrap_inner_bottom container">
		<div class="row">
          <div class="col header-bottom-nav">
              <ul class="menu-bottom">  
                {%- assign ll_bottom = linklists[section.settings.menu_bottom_bar].links -%} 
                {% for link in ll_bottom %}                      	
                	<li><a href="{{link.url}}">{{link.title}}</a></li>                      	
                {% endfor %}
              </ul>
          </div>
          <div class="col-lg-auto icon-bottom">
            {% if section.settings.header_use_search %}
              <a href="/search" class="header-search push_side header-icon" data-id="#search_popup" data-js-tooltip data-tippy-content="{{'general.search.title' | t}}">
                <svg viewBox="0 0 48.97 51.02"><path d="M3.72,17.4a14,14,0,1,1,14,14A14,14,0,0,1,3.72,17.4ZM39,38.59,29.79,29.4a17.16,17.16,0,1,0-2.3,1.94l9.42,9.42A1.5,1.5,0,0,0,39,38.64Z"/></svg>                  
              </a>  
            {% endif %}
          </div>
        </div>
      </div>      
	</div>

{% endif %}

{% schema %}
  {
    "name": "Bottom header",
    "settings": [
		{
          "type": "header",
          "content": "Bottom menu settings"
        },
        {
          "type": "checkbox",
          "id": "header_use_bottom_menu",
          "label": "Show bottom menu on header",
          "default": true
        },
        {
          "type": "link_list",
          "id": "menu_bottom_bar",
          "label": "Add bottom menu"
        },
        {
          "type": "checkbox",
          "id": "header_use_search",
          "label": "Display search on bottom menu",
          "default": true
        }

	]
  }
{% endschema %}

