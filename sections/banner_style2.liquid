{% liquid
  assign sid = section.id 
  assign layout = section.settings.layout
  assign bok_distance = section.settings.bok_distance
  assign se_blocks = section.blocks
  assign se_size = se_blocks.size

  assign style = section.settings.style
  
%}
   
{%- for i in (1..1) -%}
{%- if section.settings.hidden %}{% break %}{% endif -%}
<section id="laber_{{sid}}" class="laber-{{style}}">       
  <div class=" container {%if layout == 'full-width' %}{{layout}}{%endif%} {{bok_distance}}">
    {% if section.settings.title != blank or section.settings.sub_title!= blank %}
    <div class="wrap_title col-lg-auto col-12">
      <div class="wrap_inner_title">
        {% if section.settings.title != blank %}
        <h3 class="section-title">{{section.settings.title}}</h3>  
        {% endif %}
        {% if section.settings.sub_title!= blank %}
        <span class="section-subtitle">{{section.settings.sub_title}}</span>
        {% endif %}
      </div>
    </div> 
    {% endif %} 
    <div class="row laber-row">
      {%- case se_size -%}
			{%- when 1 -%}
      			{%- render 'bammer-item',block:se_blocks[0], cimg:'https://placehold.jp/100/f76b6a/fff/1920x530.png?text=1920x530',ratio_demo:'27.604' ,ccol:'laber-col col-sm-12',for_i:1 -%}
			{%- when 2 -%}
      			{%- render 'bammer-item',block:se_blocks[0], cimg:'https://placehold.jp/100/f76b6a/fff/692x400.png?text=692x400',ratio_demo:'57.803' ,ccol:'laber-col col-md-6 col-sm-12',for_i:1 -%}
      			{%- render 'bammer-item',block:se_blocks[1],  cimg:'https://placehold.jp/100/f76b6a/fff/692x400.png?text=692x400',ratio_demo:'57.803' ,ccol:'laber-col col-md-6 col-sm-12',for_i:1 -%}	
      		{%- when 3 -%}
      			{%- render 'bammer-item',block:se_blocks[0], cimg:'https://placehold.jp/50/0e4595/fff/450x200.png?text=450x200',ratio_demo:'44.4444' ,ccol:'laber-col col-lg-4 col-md-4 col-sm-12',for_i:1 -%}
      			{%- render 'bammer-item',block:se_blocks[1], cimg:'https://placehold.jp/50/900f0f/fff/450x200.png?text=450x200',ratio_demo:'44.4444' ,ccol:'laber-col col-lg-4 col-md-4 col-sm-12',for_i:1 -%}
     			{%- render 'bammer-item',block:se_blocks[2], cimg:'https://placehold.jp/50/0e4595/fff/450x200.png?text=450x200',ratio_demo:'44.4444' ,ccol:'laber-col col-lg-4 col-md-4 col-sm-12',for_i:1 -%}
      		{%- when 4 -%}
      			<div class="laber-col col-md-4 col-sm-12">
      				{%- render 'bammer-item',block:se_blocks[0], cimg:'https://placehold.jp/50/f76b6a/fff/450x450.png?text=450x450',ratio_demo:'100' ,ccol:'padding-0 laber-col1 col-sm-12',for_i:1 -%}
      			</div>
      			<div class="laber-col col-md-4 col-sm-12">
                    {%- render 'bammer-item',block:se_blocks[1], cimg:'https://placehold.jp/50/f76b6a/fff/450x210.png?text=450x210',ratio_demo:'46.666' ,ccol:'padding-0 laber-col2 col-sm-12',for_i:1 -%}
     			    {%- render 'bammer-item',block:se_blocks[2], cimg:'https://placehold.jp/50/f76b6a/fff/450x210.png?text=450x210',ratio_demo:'46.666' ,ccol:'padding-0 laber-col3 col-sm-12',for_i:1 -%}
      			</div>
      			<div class="laber-col col-md-4 col-sm-12">
      			    {%- render 'bammer-item',block:se_blocks[3], cimg:'https://placehold.jp/50/f76b6a/fff/450x450.png?text=450x450',ratio_demo:'100' ,ccol:'padding-0 laber-col4 col-sm-12',for_i:1 -%}
      			</div>
      		{%- when 5 -%}
      			<div class="laber-col col-md-8 col-sm-12">
                  <div class="row laber-row">
                    {%- render 'bammer-item',block:se_blocks[0], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=930x500',ratio_demo:'53.763' ,ccol:'laber-col col-sm-12',for_i:1 -%}
                    {%- render 'bammer-item',block:se_blocks[1], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=450x185',ratio_demo:'41.111' ,ccol:'laber-col col-md-6 col-sm-12',for_i:1 -%}
                    {%- render 'bammer-item',block:se_blocks[2], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=450x185',ratio_demo:'41.111' ,ccol:'laber-col col-md-6 col-sm-12',for_i:1 -%}
                  </div>
                </div>
      			<div class="laber-col col-md-4 col-sm-12">
                  <div class="row laber-row">
                    {%- render 'bammer-item',block:se_blocks[3], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=450x185',ratio_demo:'41.111' ,ccol:'laber-col col-sm-12',for_i:1 -%}
                    {%- render 'bammer-item',block:se_blocks[4], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=450x500',ratio_demo:'111.111' ,ccol:'laber-col col-sm-12',for_i:1 -%}
                  </div>
      			</div>
            {%- when 6-%}
      			{%- render 'bammer-item',block:se_blocks[0], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=1880x820',ratio_demo:'43.617' ,ccol:'laber-col col-md-4 col-sm-12',for_i:1 -%}
      			{%- render 'bammer-item',block:se_blocks[1], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=1880x820',ratio_demo:'43.617' ,ccol:'laber-col col-md-4 col-sm-12',for_i:1 -%}
     			{%- render 'bammer-item',block:se_blocks[2], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=1880x820',ratio_demo:'43.617' ,ccol:'laber-col col-md-4 col-sm-12',for_i:1 -%}
      			{%- render 'bammer-item',block:se_blocks[3], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=1880x820',ratio_demo:'43.617' ,ccol:'laber-col col-md-4 col-sm-12',for_i:1 -%}
     			{%- render 'bammer-item',block:se_blocks[4], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=1880x820',ratio_demo:'43.617' ,ccol:'laber-col col-md-4 col-sm-12',for_i:1 -%}
     			{%- render 'bammer-item',block:se_blocks[5], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=1880x820',ratio_demo:'43.617' ,ccol:'laber-col col-md-4 col-sm-12',for_i:1 -%}
     {%- endcase -%}
      
    </div>    
  </div>
</section>
{%- render 'section_style' -%}
{%- endfor -%}


