{% include 'breadcrumb' %}
{% style%}
	.breadcrumbs{
        {% if section.settings.bg_breadcrumb_blog != blank %}
        	background-image: url('{{ section.settings.bg_breadcrumb_blog | img_url:"1920x"}}');
        {% endif %}
        margin-bottom:{{section.settings.mg_bottom}}px ;
        background-color:{{section.settings.bg}};
        border-color:{{section.settings.b_color}};
	}
	.breadcrumbs .outline-breadcrum .wrap-breadcrum{
		height:{{section.settings.b_height}}px ;
	}
    @media (max-width: 1024px) {
        .breadcrumbs{
       	 	background: {{section.settings.mobile_bg}};
        	margin-bottom:{{section.settings.mobile_mg_bottom}}px ;
		}
        .breadcrumbs .outline-breadcrum .wrap-breadcrum{
        	height:{{section.settings.mobile_ht}}px ;
        }	
    }
{% endstyle%}
{% schema %}
  {
    "name": "Breadcrumb",
    "class": "laber_section laber-breadcrumb",
    "settings": [ 
      {
      "type": "header",
      "content": "Settings"
      },
      {
        "type": "image_picker",
        "id": "bg_breadcrumb_blog",
        "label": "Background banner"
      },
      {
      "type": "color",
      "id": "bg",
      "label": "Background color",
      "default": "#fff"
      },
	  {
      "type": "color",
      "id": "b_color",
      "label": "Border color",
      "default": "#ebebeb"
      },	
      {
        "type": "range",
        "id": "b_height",
        "label": "height",
        "default": 70,
        "min": 0,
        "max": 200,
        "step": 10,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "mg_bottom",
        "label": "Margin bottom",
        "default": 100,
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px"
      },
      {
      "type": "header",
      "content": "Mobile settings"
      },	
      {
      "type": "color",
      "id": "mobile_bg",
      "label": "Background color",
      "default": "#f5f5f5"
      },
      {
        "type": "range",
        "id": "mobile_ht",
        "label": "height",
        "default": 30,
        "min": 0,
        "max": 200,
        "step": 10,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "mobile_mg_bottom",
        "label": "Margin bottom",
        "default": 100,
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px"
      }
	]
  }
{% endschema %}

