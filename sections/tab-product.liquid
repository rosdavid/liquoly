        "max": 100,
        "step": 1,
        "unit": "px"
      },
	  {
        "type": "range",
        "id": "mobile_pd_top",
        "label": "Padding top",
        "default": 0,
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "mobile_pd_bottom",
        "label": "Padding bottom",
        "default": 0,
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px"
      }
    ],
    "blocks": [
      {
        "type": "col",
        "name": "Collection",
        "limit": 10,
        "settings": [          
            {
              "type": "textarea",
              "id": "title",
              "label": "Title"
            },
            {
              "type": "collection",
              "id": "collection",
              "label": "Collection"
            }
        ]
      }
      
